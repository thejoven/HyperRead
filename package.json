{
  "name": "hyperread",
  "version": "5.1.1",
  "description": "HyperRead — Read smarter. Read faster. A beautiful macOS-style Markdown, PDF, and EPUB reader built with Electron",
  "author": "thejoven",
  "license": "AGPL-3.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron electron/main.js",
    "electron-dev": "NODE_ENV=development electron electron/main.js",
    "start": "npm run build && npm run electron",
    "start-dev": "npm run build && npm run electron-dev",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && npm run electron-dev\"",
    "dist": "npm run build && electron-builder",
    "dist-all": "npm run build && electron-builder --mac --win --linux",
    "lint": "eslint"
  },
  "main": "electron/main.js",
  "dependencies": {
    "@copilotkit/react-core": "^1.10.4",
    "@copilotkit/react-ui": "^1.10.4",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/typography": "^0.5.16",
    "@vercel/analytics": "^1.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "epubjs": "^0.3.93",
    "highlight.js": "^11.11.1",
    "lucide-react": "^0.542.0",
    "mermaid": "^11.10.1",
    "next-themes": "^0.4.6",
    "pdfjs-dist": "^5.4.296",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-markdown": "^10.1.0",
    "react-mermaid": "^0.1.3",
    "rehype-highlight": "^7.0.2",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "remark-mermaid": "^0.2.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1"
  },
  "build": {
    "appId": "com.thejoven.hyperread",
    "productName": "HyperRead",
    "icon": "logo/logo.png",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "fileAssociations": [
      {
        "ext": "md",
        "name": "Markdown Document",
        "description": "Markdown文档",
        "icon": "logo/logo.png"
      },
      {
        "ext": "markdown",
        "name": "Markdown Document",
        "description": "Markdown文档",
        "icon": "logo/logo.png"
      },
      {
        "ext": "txt",
        "name": "Text Document",
        "description": "文本文档",
        "icon": "logo/logo.png"
      },
      {
        "ext": "pdf",
        "name": "PDF Document",
        "description": "PDF文档",
        "icon": "logo/logo.png"
      },
      {
        "ext": "epub",
        "name": "EPUB Document",
        "description": "EPUB电子书",
        "icon": "logo/logo.png"
      }
    ],
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "!node_modules/.cache",
      "!node_modules/.vite"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "logo/logo.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "notarize": false,
      "extendInfo": {
        "CFBundleDocumentTypes": [
          {
            "CFBundleTypeName": "Markdown Document",
            "CFBundleTypeExtensions": [
              "md",
              "markdown"
            ],
            "CFBundleTypeRole": "Editor",
            "CFBundleTypeIconFile": "logo.png",
            "LSHandlerRank": "Alternative"
          },
          {
            "CFBundleTypeName": "Text Document",
            "CFBundleTypeExtensions": [
              "txt"
            ],
            "CFBundleTypeRole": "Editor",
            "CFBundleTypeIconFile": "logo.png",
            "LSHandlerRank": "Alternative"
          },
          {
            "CFBundleTypeName": "PDF Document",
            "CFBundleTypeExtensions": [
              "pdf"
            ],
            "CFBundleTypeRole": "Viewer",
            "CFBundleTypeIconFile": "logo.png",
            "LSHandlerRank": "Alternative"
          },
          {
            "CFBundleTypeName": "EPUB Document",
            "CFBundleTypeExtensions": [
              "epub"
            ],
            "CFBundleTypeRole": "Viewer",
            "CFBundleTypeIconFile": "logo.png",
            "LSHandlerRank": "Alternative"
          }
        ]
      }
    },
    "dmg": {
      "title": "HyperRead",
      "iconSize": 100,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "logo/logo.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "HyperRead"
    },
    "linux": {
      "target": "AppImage",
      "desktop": {
        "entry": {
          "Name": "HyperRead",
          "Comment": "现代化的Markdown文档阅读器",
          "GenericName": "Markdown Reader",
          "Keywords": "markdown;reader;document;text;",
          "StartupWMClass": "HyperRead",
          "MimeType": "text/markdown;text/x-markdown;text/plain;application/pdf;application/epub+zip;"
        }
      }
    }
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "postcss": "^8.5.6",
    "tailwindcss": "^4",
    "terser": "^5.44.0",
    "typescript": "^5",
    "vite": "^7.1.5",
    "wait-on": "^8.0.5"
  }
}
